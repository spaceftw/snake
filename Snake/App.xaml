<Application x:Class="Snake.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Snake"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="BackgroundColour" Color="#211E2B"/>
        <SolidColorBrush x:Key="GridBackgroundColour" Color="#312C40"/>
        <SolidColorBrush x:Key="GridLineColour" Color="#4F4867"/>
        <SolidColorBrush x:Key="TextColour" Color="#EBEBEB"/>
        <SolidColorBrush x:Key="OverlayColour" Color="#7F000000"/>
        <FontFamily x:Key="MainFont">Assets/#Droid Sans Mono</FontFamily>
    </Application.Resources>
</Application>
